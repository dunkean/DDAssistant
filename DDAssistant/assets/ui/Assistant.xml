<?xml version="1.0" encoding="utf-8" ?>
<vbox id="mainLayout" width="100%" height="100%" autoSize="true">
	
	<menubar styleName="blackStyle">
		<menubutton text="Nouveau" id="newMenu" styleName="blackStyle">
			<menuitem text="Joueur" id="newPlayer" styleName="blackStyle"/>
			<menuitem text="Arène" id="newArena" styleName="blackStyle"/>
		</menubutton>
		<menubutton text="Joindre" id="joinMenu" styleName="blackStyle">
			<menuitem text="Arène 1" id="newArenaPanel" styleName="blackStyle"/> <!--dynamic-->
		</menubutton>
		<menubutton text="Vues" id="viewsMenu" styleName="blackStyle">
			<menuitem text="Carac" id="newAbilityPanel" styleName="blackStyle"/><!--dynamic-->
			<menuitem text="Défense" id="newDefensePanel" styleName="blackStyle"/><!--dynamic-->
			<menuitem text="Vie" id="newLifePanel" styleName="blackStyle"/><!--dynamic-->
			<menuitem text="Attaque" id="newAttackPanel" styleName="blackStyle"/><!--dynamic-->
			<menuitem text="Compétences" id="newSkillsPanel" styleName="blackStyle"/><!--dynamic-->
		</menubutton>
	</menubar>
	
	<hbox width="100%" autoSize="true" id="abilities">
		<grid columns="12" styleName="blackStyle" >
			<text id="FORlbl" text="FOR" styleName="blackStyle" />
			<text id="FORVal" text="10" styleName="whiteStyle" />
			<text id="DEXlbl" text="DEX" styleName="blackStyle" />
			<text id="DEXVal" text="10" styleName="whiteStyle" />
			<text id="CONlbl" text="CON" styleName="blackStyle" />
			<text id="CONVal" text="10" styleName="whiteStyle" />
			<text id="INTlbl" text="INT" styleName="blackStyle" />
			<text id="INTVal" text="10" styleName="whiteStyle" />
			<text id="SAGlbl" text="SAG" styleName="blackStyle" />
			<text id="SAGVal" text="10" styleName="whiteStyle" />
			<text id="CHAlbl" text="CHA" styleName="blackStyle" />
			<text id="CHAVal" text="10" styleName="whiteStyle" />
		</grid>
	</hbox>
	
	<hbox width="100%" autoSize="true">
		<button id="btn1" text="Bouton 1" width="10%" />
		<button id="btn2" text="Bouton 2" width="10%" />
		<button id="btn3" text="Bouton 3" width="10%" />
		<text id="label" text="Label"/>
	</hbox>
	
	
	
